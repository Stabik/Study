@using ClassLibrary.model.Filters
@model MvcStudy.Models.FolderModel
@{
    ViewBag.Title = Model.CurrentFolder != null ?
        Model.CurrentFolder.Name :
        "Хранилище документов";
    var parentId = Model.CurrentFolder != null ? Model.CurrentFolder.Id : (long?)null;
}

<h2>List</h2>

<p>
    @Html.ActionLink("Добавить Папку", "Create", new { parent = parentId })
</p>
<p>
    @Html.ActionLink("Добавить Документ", "Create", "Document", new { parent = parentId }, null)
</p>


<div style="height:20px;"></div>

@Html.Partial("Grid", Model.Items, new ViewDataDictionary {
    { "Parent", Model.Parent },
    { "IsRootFolder", Model.IsRootFolder },
})